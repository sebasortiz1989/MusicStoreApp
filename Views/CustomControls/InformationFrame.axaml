    <Style Selector="controls|InformationFrame">
        <!--  Set Defaults  -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="#143F66">
                    <StackPanel VerticalAlignment="Top">
                        <Border
                            Width="181"
                            Height="28"
                            Background="#040404">
                            <TextBlock
                                x:Name="HelloWorld"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Roboto"
                                FontSize="20"
                                Foreground="#FFFFFF"
                                Text="{TemplateBinding TextoTitulo}" />
                        </Border>
                        <Border
                            Width="181"
                            Height="57"
                            Background="#B3000000">
                            <Grid ColumnDefinitions="40, 141">
                                <PathIcon
                                    x:Name="IconImage"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{TemplateBinding StringSvg,
                                                           Converter={x:Static controls:Converters.StringToGeometryConverter}}"
                                    Foreground="#5DE4FF" />

                                <Grid
                                    Grid.Column="1"
                                    Width="141"
                                    Height="57"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ColumnDefinitions="89, 52">

                                    <TextBlock
                                        Grid.Column="0"
                                        Grid.ColumnSpan="{TemplateBinding ColumnSpanDado}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Roboto"
                                        FontSize="32"
                                        FontWeight="400"
                                        Foreground="#FFFFFF"
                                        Text="{TemplateBinding Dado,
                                                               Converter={x:Static controls:Converters.IntToStringConverter}}" />

                                    <Border
                                        x:Name="FrameUnidadePaulinho"
                                        Grid.Column="1"
                                        Width="52"
                                        Height="57"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="#43B6DB"
                                        IsVisible="{TemplateBinding MostrarFrameUnidade}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Roboto"
                                            FontSize="32"
                                            FontWeight="400"
                                            Foreground="Black"
                                            Text="{TemplateBinding TextoUnidade}" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
